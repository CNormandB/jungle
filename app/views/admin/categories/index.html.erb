<h1>Admin::Categories#create</h1>
<%= form_with(model: @category, url: admin_categories_path, method: :post, scope: 'categories') do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Category', class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>