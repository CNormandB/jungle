<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <div class="panel panel-default items">
  <table class="table-bordered">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |line_item| %>
        <tr>
          <td><%= image_tag(line_item.product.image.url, class: "product-image") %></td>
          <td><%= line_item.product.name %></td>
          <td><%= line_item.product.description %></td>
          <td><%= line_item.quantity %></td>
          <td><%= humanized_money_with_symbol line_item.total_price %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
      <th colspan="4">Final Amount:</th> <!-- Match the colspan with the number of columns in the table -->
      <th><%= humanized_money_with_symbol @order.total %></th>
      </tr>
    </tfoot>
  </table>
</div>

<div class="order-email">
  <p>Email used for this order: <%= @order.email %></p>
</div>


  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
