<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end %>

  <!-- Category selection dropdown -->
  <div class="field">
    <%= form.collection_select :category_id, Category.all, :id, :name %>
  </div>

  <div class="buttonAndBadge">
  <% if product.quantity.zero? %>
    <!-- Product is sold out -->
    <span class="soldout">Sold Out</span>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn', disabled: true do %>
      <%= fa_icon "shopping-cart", text: 'Add', class: 'add-button' %> 
    <% end %>
  <% else %>
    <!-- Product is available -->
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn', method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add', class: 'add-button' %> 
    <% end %>
  <% end %>
  </div>
</article>